<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_COE_BRANCH_PARAMETERS_CNFG_create_tbl" author="prashant_nagrare">

        <createTable tableName="idgc_coe_branch_parameters_cnfg"
                     remarks="A table to contain all the Branch Parameter configuration">

            <column name="branch_code" type="varchar(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="branch_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>

            <column name="branch_concise_name" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_branch_available_status" type="char(1)">
                <constraints nullable="false"/>
            </column>

            <column name="branch_type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="branch_address1" type="varchar(100)">
            </column>

            <column name="branch_address2" type="varchar(100)">
            </column>

            <column name="branch_address3" type="varchar(100)">
            </column>

            <column name="branch_address4" type="varchar(100)">
            </column>

            <column name="city_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="state_code" type="varchar(3)">
            </column>

            <column name="country_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_identifier_code" type="varchar(11)">
            </column>

            <column name="telephone_no" type="varchar(16)">
            </column>

            <column name="fax_no" type="varchar(16)">
            </column>

            <column name="email_id" type="varchar(20)">
            </column>

            <column name="bank_website" type="varchar(20)">
            </column>

            <column name="general_currency_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="general_branch_parent" type="varchar(12)">
            </column>

            <column name="general_country_code" type="varchar(3)">
            </column>

            <column name="general_zonal_office_code" type="varchar(35)">
            </column>

            <column name="general_zonal_office_name" type="varchar(35)">
            </column>

            <column name="general_regional_office_code" type="varchar(35)">
            </column>

            <column name="general_regional_office_name" type="varchar(35)">
            </column>

            <column name="general_cut_off_time" type="varchar(12)">
            </column>

            <column name="clearing_local_payment_branch" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="clearing_currency_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="atm_branch" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="atm_institution_identity" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="atm_inter_branch_tran_code" type="varchar(6)">
                <constraints nullable="false"/>
            </column>

            <column name="atm_is_customer_fund_trf" type="char(1)">
            </column>

            <column name="time_zone_no_of_hours" type="int">
            </column>

            <column name="time_zone_no_of_minutes" type="int">
            </column>

            <column name="time_zone_is_ahead" type="char(1)">
            </column>

            <column name="time_zone_level" type="varchar(20)">
            </column>

            <column name="global_interdict_function_id" type="varchar(16)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="tran_dup_module_code" type="varchar(16)">
            </column>

            <column name="tran_dup_is_check_req" type="char(1)">
            </column>

            <column name="tran_dup_no_of_days_for_check" type="int">
            </column>

            <column name="local_currency_msg_mod_code" type="varchar(16)">
            </column>

            <column name="local_currency_msg_type" type="varchar(35)">
            </column>

            <column name="misc_branch_is_deno_req" type="char(1)">
                <constraints nullable="false" />
            </column>

            <column name="misc_branch_currency_deno" type="varchar(3)">
                <constraints nullable="false" />
            </column>

            <column name="misc_branch_week_begin_day" type="varchar(12)">
                <constraints nullable="false" />
            </column>

            <column name="misc_branch_weekly_off1" type="varchar(12)">
                <constraints nullable="false" />
            </column>

            <column name="misc_branch_weekly_off2" type="varchar(12)">
                <constraints nullable="false" />
            </column>

            <column name="misc_branch_fin_yr_begin_mth" type="varchar(20)">
                <constraints nullable="false" />
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>