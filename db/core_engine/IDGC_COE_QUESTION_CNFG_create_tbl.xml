<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_COE_QUESTION_CNFG_create_tbl" author="nikhilYadav">

        <createTable tableName="idgc_coe_question_cnfg"
                     remarks="A table to contain all the Question configuration">

            <column name="question_id" type="varchar(10)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="question_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>

            <column name="question_text" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="question_description" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="answer_display_type" type="varchar(50)">
            </column>

            <column name="manual_fact_based" type="varchar(10)">
            </column>

            <column name="answer_values" type="varchar(100)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>