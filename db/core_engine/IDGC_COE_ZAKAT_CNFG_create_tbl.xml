<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_COE_ZAKAT_CNFG_create_tbl" author="shruti">

        <createTable tableName="idgc_coe_zakat_cnfg"
                     remarks="A table to contain all the Zakat configuration">

            <column name="zakat_year" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="start_date_of_ramadan" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>