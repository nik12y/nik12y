<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_COE_REASON_CODE_CNFG_create_tbl" author="pranay_anil_lingayat">

        <createTable tableName="idgc_coe_reason_code_cnfg"
                     remarks="A table to contain all the reason code configuration">

            <column name="primary_reason_code" type="varchar(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="primary_reason_desc" type="varchar(40)">
            </column>

            <column name="is_pri_account_block" type="char(1)">
            </column>

            <column name="is_pri_account_unblock" type="char(1)">
            </column>

            <column name="is_pri_account_closure" type="char(1)">
            </column>

            <column name="is_pri_request_for_acc_closure" type="char(1)">
            </column>

            <column name="is_pri_stop_payment" type="char(1)">
            </column>

            <column name="is_pri_stop_payment_revoke" type="char(1)">
            </column>

            <column name="secondary_reason_code" type="varchar(16)">
                <constraints unique="true"/>
            </column>

            <column name="secondary_reason_desc" type="varchar(40)">
            </column>

            <column name="is_sec_account_block" type="char(1)">
            </column>

            <column name="is_sec_account_unblock" type="char(1)">
            </column>

            <column name="is_sec_account_closure" type="char(1)">
            </column>

            <column name="is_sec_request_for_acc_closure" type="char(1)">
            </column>

            <column name="is_sec_stop_payment" type="char(1)">
            </column>

            <column name="is_sec_stop_payment_revoke" type="char(1)">
            </column>

            <column name="applicable_categories" type="varchar(50)">
            </column>

            <column name="document_req_if_any" type="varchar(100)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>