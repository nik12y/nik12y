<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_COE_AML_CNFG_create_tbl" author="sujan">

        <createTable tableName="idgc_coe_aml_cnfg"
                     remarks="A table to contain all the aml configuration">

            <column name="product_category" type="varchar(10)">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>

            <column name="product_description" type="char(35)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="is_product_type" type="char(1)">
            </column>

            <column name="product_limit_currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="exchange_rate_code" type="varchar(5)">
            </column>

            <column name="exchange_rate_type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="debit_credit_indicator" type="varchar(50)">
            </column>

            <column name="limit_code" type="varchar(5)">
            </column>

            <column name="limit_amount" type="numeric(23,2)">
            </column>

            <column name="limit_currency" type="varchar(3)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>