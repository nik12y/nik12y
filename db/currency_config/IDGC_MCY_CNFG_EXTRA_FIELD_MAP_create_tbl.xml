<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_MCY_CNFG_EXTRA_FIELD_MAP_create_tbl" author="rakshit">
        <comment>Currency configuration table modification idgc_mcy_cnfg_extra_field_map</comment>
        <createTable tableName="idgc_mcy_cnfg_extra_field_map"
                     remarks="Table to store all extra field defined for a currency">
            <column name="currency_ext_field_id" type="integer" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="currency_code" type="character varying(3)">
                <constraints nullable="false"/>
            </column>
            <column name="extra_field_name" type="character varying(10)">
                <constraints nullable="true"/>
            </column>
            <column name="extra_field_value" type="character varying(35)">
                <constraints nullable="true"/>
            </column>
            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>
            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(20)">
            </column>
            <column name="creation_time" type="timestamp">
            </column>
            <column name="last_updated_by" type="varchar(20)">
            </column>
            <column name="last_updated_time" type="timestamp">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>