<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_bank_parameters_cnfg" author="prashant_nagrare">

        <createTable tableName="idgc_coe_bank_parameters_cnfg"
                     remarks="A table to contain all the Bank Parameter configuration">

            <column name="bank_code" type="varchar(4)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="bank_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_code_regulatory" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_concise_name" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_group_code" type="varchar(16)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_address1" type="varchar(100)">
            </column>

            <column name="bank_address2" type="varchar(100)">
            </column>

            <column name="bank_address3" type="varchar(100)">
            </column>

            <column name="bank_address4" type="varchar(100)">
            </column>

            <column name="country_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="state_code" type="varchar(3)">
            </column>

            <column name="city_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="telephone_no" type="varchar(16)">
            </column>

            <column name="fax_no" type="varchar(16)">
            </column>

            <column name="email_id" type="varchar(20)">
            </column>

            <column name="bank_website" type="varchar(20)">
            </column>

            <column name="currency_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="is_denomination_tracking_required" type="char(1)">
            </column>

            <column name="currency_denomination" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_denomination_tracking" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="week_begin_day" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="weekly_off1" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="weekly_off2" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="weekly_off3" type="varchar(12)">
            </column>

            <column name="financial_year_begin_month" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="rule_id_od" type="varchar(20)">
            </column>

            <column name="rule_name_od" type="varchar(100)">
            </column>

            <column name="rule_id_loan" type="varchar(20)">
            </column>

            <column name="rule_name_loan" type="varchar(100)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>