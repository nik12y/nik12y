<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_financial_accounting_year_cnfg" author="PreetiS">

        <createTable tableName="idgc_coe_financial_accounting_year_cnfg"
                     remarks="A table to contain all the financial accounting year ">

            <column name="financial_accounting_year_id" type="serial4" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="bank_code" type="varchar(4)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="branch_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>

            <column name="financial_accounting_year_code" type="varchar(6)">
                <constraints nullable="false"/>
            </column>

            <column name="financial_accounting_year_desc" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="period_code_frequency" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="life_cycle_id" type="varchar(50)">
            </column>
            <column name="reference_no" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="record_version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="is_authorized" type="char(1)">
                <constraints nullable="false"/>
            </column>
            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(20)">
            </column>
            <column name="creation_time" type="timestamp">
            </column>
            <column name="last_updated_by" type="varchar(20)">
            </column>
            <column name="last_updated_time" type="timestamp">
            </column>
        </createTable>
        <addUniqueConstraint
                columnNames="financial_accounting_year_id" tableName="idgc_coe_financial_accounting_year_cnfg"
                constraintName="idgc_coe_financial_accounting_year_cnfg_pk"/>
    </changeSet>
    <changeSet id="idgc_coe_fin_acc_year_period_codes_cnfg" author="Preeti">

        <createTable tableName="idgc_coe_fin_acc_year_period_codes_cnfg"
                     remarks="A table to contain all the financial accounting period codes year ">

            <column name="fin_acc_year_period_codes_id" type="serial4" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="financial_accounting_year_id" type="int">
                <constraints nullable="true" />
            </column>

            <column name="period_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="start_date_accounting_period" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="end_date_accounting_period" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>