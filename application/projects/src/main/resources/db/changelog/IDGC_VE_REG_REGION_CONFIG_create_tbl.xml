<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_VE_REG_REGION_CONFIG_create_tbl" author="NikhilYadav">

        <createTable tableName="idgc_ve_reg_region_config_b"
                     remarks="A table to contain all the RegulatoryRegionCode configuration">

            <column name="reg_region_code" type="varchar(8)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="region_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>

            <column name="region_desc" type="varchar(40)">
                    <constraints nullable="false"/>
            </column>

            <column name="region_effective_date" type="DATE">
            </column>

            <column name="region_group_code" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="region_purpose_code" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="life_cycle_id" type="varchar(50)">

            </column>

            <column name="reference_no" type="varchar(50)">

            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

        <createTable tableName="idgc_ve_reg_region_mapping_b"
                     remarks="A table to contain all the RegulatoryRegion configuration">

            <column name="reg_region_mapping_id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="reg_region_code" type="varchar(8)">
                <constraints nullable="true"/>
            </column>

            <column name="demographic_mapping_code" type="varchar(8)">
                <constraints nullable="false" />
            </column>

            <column name="record_version" type="integer">
            </column>

            <column name="record_status" type="varchar(10)">
            </column>

            <column name="is_authorized" type="varchar(1)">
            </column>

            <column name="last_configuration_action" type="varchar(20)">
            </column>


        </createTable>
        <addForeignKeyConstraint baseTableName="idgc_ve_reg_region_mapping_b" baseColumnNames="reg_region_code"
                                 constraintName="reg_region_code_fk"
                                 referencedTableName="idgc_ve_reg_region_config_b"
                                 referencedColumnNames="reg_region_code"/>
    </changeSet>

</databaseChangeLog>