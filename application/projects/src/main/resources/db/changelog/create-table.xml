<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_language_code_cnfg" author="hrishikesh">

        <createTable tableName="idgc_coe_language_code_cnfg"
                     remarks="A table to contain all the Language configuration">

            <column name="language_code" type="varchar(2)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="language_code_alternate" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="language_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="locale_code" type="varchar(2)">
            </column>

            <column name="locale_name" type="varchar(100)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="java.util.Date">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="java.util.Date">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>