<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_MCY_CNFG_CURRENCY_PAIR_create_tbl" author="hrishikesh">

        <createTable tableName="idgc_mcy_cnfg_currency_pair"
                     remarks="A table to contain all the Currency Pair configuration">

            <column name="pair_id" type="integer" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="currency_1" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_1_name" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_2" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_2_name" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="entity_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="entity_level" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="entity_code" type="varchar(10)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="entity_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>

            <column name="country_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="country_name" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="through_currency" type="varchar(1)">
            </column>

            <column name="through_currency_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="through_currency_description" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="no_of_units" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="point_multiplier" type="float">
            </column>

            <column name="quotation_methods" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="spread_definition" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="pair_id" tableName="idgc_mcy_cnfg_currency_pair"
                constraintName="idgc_mcy_cnfg_currency_pair_pk" />

        <addForeignKeyConstraint baseTableName="idgc_mcy_cnfg_currency_pair" baseColumnNames="currency_1" constraintName="currency_1_fk_for_currency_pair" referencedTableName="idgc_mcy_cnfg_currency_dtls" referencedColumnNames="currency_code" />

        <addForeignKeyConstraint baseTableName="idgc_mcy_cnfg_currency_pair" baseColumnNames="currency_2" constraintName="currency_2_fk_for_currency_pair" referencedTableName="idgc_mcy_cnfg_currency_dtls" referencedColumnNames="currency_code"/>

        <addForeignKeyConstraint baseTableName="idgc_mcy_cnfg_currency_pair" baseColumnNames="through_currency_code" constraintName="through_currency_code_fk_for_currency_pair" referencedTableName="idgc_mcy_cnfg_currency_dtls" referencedColumnNames="currency_code"/>

        <addForeignKeyConstraint baseTableName="idgc_mcy_cnfg_currency_pair" baseColumnNames="entity_code" constraintName="entity_code_fk_for_currency_pair" referencedTableName="idgc_coe_ve_code_cnfg" referencedColumnNames="entity_code" />

    </changeSet>

</databaseChangeLog>