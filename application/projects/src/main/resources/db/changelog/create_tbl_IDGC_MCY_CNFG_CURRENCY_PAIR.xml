<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="currency_pair_cnfg" author="hrishikesh">

        <createTable tableName="idgc_mcy_currency"
                     remarks="A table to store all currency related information">

            <column name="currency_code" type="character varying(3)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="currency_name" type="character varying(35)">
                <constraints nullable="false"/>
            </column>
            <column name="iso_numeric_code" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="country_name" type="character varying(100)">
                <constraints nullable="false"/>
            </column>
            <column name="country_code" type="character varying(2)">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="character varying(15)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="currency_code" tableName="idgc_mcy_currency"
                constraintName="idgc_mcy_currency_pk" />

        <createTable tableName="idgc_ve_entity_type_b"
                     remarks="A table to store all entity types">

            <column name="hierarchy_level_number" type="int4">
            </column>

            <column name="entity_code_type" type="character varying(20)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="entity_code_desc" type="character varying(400)">
            </column>

            <column name="is_entity_level_variable" type="bpchar(1)">
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="entity_code_type" tableName="idgc_ve_entity_type_b"
                constraintName="idgc_ve_entity_type_b_pk" />

        <createTable tableName="idgc_ve_entity_config_b"
                     remarks="A table to contain all the entity configuration">

            <column name="entity_code" type="varchar(10)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="entity_type" type="varchar(10)">
            </column>

            <column name="entity_name" type="varchar(40)">
            </column>

            <column name="parent_entity_type" type="varchar(40)">
            </column>

            <column name="parent_entity_code" type="varchar(40)">
            </column>

            <column name="is_default" type="bpchar(1)">
            </column>

            <column name="effective_date" type="date">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="int4">
            </column>

            <column name="record_status" type="varchar(10)">
            </column>

            <column name="is_authorized" type="varchar(1)">
            </column>

            <column name="last_configuration_action" type="varchar(20)">
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="entity_code" tableName="idgc_ve_entity_config_b"
                constraintName="idgc_ve_entity_config_b_pk" />

        <createTable tableName="idgc_mcy_cnfg_currency_pair"
                     remarks="A table to contain all the Currency Pair configuration">

            <column name="pair_id" type="integer" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="currency_1" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_1_description" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_2" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_2_description" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="entity_code_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="entity_code" type="character varying(100)">
                <constraints nullable="false"/>
            </column>

            <column name="country_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="through_currency" type="varchar(1)">
            </column>

            <column name="through_currency_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="through_currency_description" type="varchar(35)">
                <constraints nullable="false"/>
            </column>

            <column name="no_of_units" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="point_multiplier" type="float">
            </column>

            <column name="quotation_methods" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="spread_definition" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="pair_id" tableName="idgc_mcy_cnfg_currency_pair"
                constraintName="idgc_mcy_cnfg_currency_pair_pk" />

    </changeSet>

</databaseChangeLog>