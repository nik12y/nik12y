<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="branch_param_config" author="Vidya">

        <createTable tableName="idgc_mcy_branch_parameter_config"
                     remarks="A table to contain all the branch parameter">

            <column name="currency_code" type="varchar(3)">
                 <constraints nullable="false"/>
            </column>

            <column name="entity_code" type="character varying(100)">
                <constraints nullable="false"/>
            </column>

            <column name="spot_days" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="generation_of_payment_message_prior_to_settlement_days" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="generation_of_receive_messages" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name= "reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="java.util.Date">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="java.util.Date">
            </column>
        </createTable>

        <addUniqueConstraint
                columnNames="currency_code,entity_code"
                tableName="idgc_mcy_branch_parameter_config"
                constraintName="idgc_mcy_branch_parameter_config_pk" />
    </changeSet>
</databaseChangeLog>