<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_app_ver_type_cnfg" author="sujan">

        <createTable tableName="idgc_coe_app_ver_type_cnfg"
                     remarks="Parent table of Application Verification Type configuration">

            <column name="verification_type_id" type="varchar(10)">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>

            <column name="verification_type_name" type="varchar(35)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="verification_type_desc" type="varchar(100)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="is_viewable_to_customer" type="char(1)">
            </column>

            <column name="is_alert_to_be_sent_on_compl" type="char(1)">
            </column>

            <column name="is_external" type="char(1)">
            </column>

            <column name="is_document_required" type="char(1)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="verification_type_id" tableName="idgc_coe_app_ver_type_cnfg"
                constraintName="idgc_coe_app_ver_type_cnfg_pk" />

    </changeSet>

    <changeSet id="idgc_coe_app_ver_type_doc_cnfg" author="sujan">

        <createTable tableName="idgc_coe_app_ver_type_doc_cnfg"
                     remarks="Child table which is the documents required table of Application Verification Type configuration">

            <column name="idgc_coe_app_ver_type_doc_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="verification_type_id" type="varchar(10)">
                <constraints nullable="true"/>
            </column>

            <column name="document_name" type="varchar(100)">
                <constraints nullable="true"/>
            </column>

            <column name="nature" type="varchar(50)">
                <constraints nullable="true"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>