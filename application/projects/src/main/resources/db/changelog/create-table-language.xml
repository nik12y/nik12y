<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="language_config" author="hrishikesh">

        <createTable tableName="language_config"
                     remarks="A table to contain all the Languages">

            <column name="language_code" type="varchar(2)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="alternate_language_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="language_name" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="locale_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="locale_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>