<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_error_override_cnfg" author="PreetiS">

        <createTable tableName="idgc_coe_error_override_cnfg"
                     remarks="A table to contain all the error override">

            <column name="error_code" type="varchar(10  )">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="error_message" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="type_of_message" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="is_confirmation_required" type="char(1)">
                <constraints nullable="false"/>
            </column>

            <column name="record_version" type="int4">
                <!--                <constraints nullable="false"/>-->
            </column>

            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="authorized" type="bpchar(1)">
                <!--                <constraints nullable="false"/>-->
            </column>

            <column name="last_configuration_action" type="varchar(50)">
                <!--                <constraints nullable="false"/>-->
            </column>

            <column name="reference_no" type="varchar(18)">
                <!--                <constraints nullable="false"/>-->
            </column>

            <column name="trace_info" type="varchar(50)">
                <!--                <constraints nullable="false"/>-->
            </column>

            <column name="action" type="varchar(20)">
                <!--                <constraints nullable="false"/>-->
            </column>

            <column name="created_by" type="varchar(50)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(50)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>