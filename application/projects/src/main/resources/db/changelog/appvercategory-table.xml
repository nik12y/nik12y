<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_app_category_cnfg" author="nikhil_jagtap">

        <createTable tableName="idgc_coe_app_category_cnfg"
                     remarks="A table to contain all the Application Verification Category configuration">

            <column name="app_verification_category_id" type="varchar(50)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="verification_category_desc" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="is_external" type="char(1)">
                <constraints nullable="false"/>
            </column>


            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

        <addUniqueConstraint
                columnNames="app_verification_category_id" tableName="idgc_coe_app_category_cnfg"
                constraintName="idgc_coe_app_category_cnfg_pk"/>

    </changeSet>


    <changeSet id="idgc_coe_app_category_type_cnfg" author="nikhil_jagtap">

        <createTable tableName="idgc_coe_app_category_type_cnfg"
                     remarks="A table to contain all the Application Verification Category Type configuration">

            <column name="app_category_type_id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="app_verification_type_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="app_verification_category_id" type="varchar(50)">
                <constraints nullable="true"/>
            </column>

            <column name="is_view_to_customer" type="char(1)">
                <constraints nullable="false"/>
            </column>

            <column name="nature" type="varchar(100)">
                <constraints nullable="false"/>
            </column>


            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>