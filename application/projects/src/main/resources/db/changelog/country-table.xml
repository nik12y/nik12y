<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_country_code_cnfg" author="NileshB">

        <createTable tableName="idgc_coe_country_code_cnfg"
                     remarks="A table to contain all the country config">

            <column name="country_code" type="varchar(2)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="country_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="country_code_machine" type="varchar(3)">
                <constraints nullable="false"/>
            </column>

            <column name="country_code_alternate" type="varchar(3)">
                <constraints nullable="true"/>
            </column>

            <column name="region_code" type="varchar(10)">
                <constraints nullable="true"/>
            </column>

            <column name="currency_limit" type="varchar(3)">
            </column>

            <column name="overall_limit" type="number(23, 2)">
            </column>

            <column name="is_iban" type="varchar(1)">
            </column>

            <column name="is_eu_member" type="varchar(1)">
            </column>

            <column name="is_bic_code" type="varchar(1)">
            </column>

            <column name="is_mt_generate" type="varchar(1)">
            </column>

            <column name="is_clearing_network" type="varchar(1)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>