<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_bank_identifier_code_cnfg" author="sujan">

        <createTable tableName="idgc_coe_bank_identifier_code_cnfg"
                     remarks="A table to contain all the Bank Identifier Code configuration">

            <column name="bank_identifier_code" type="varchar(11)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="bank_identifier_code_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_address1" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_address2" type="varchar(100)">
            </column>

            <column name="bank_address3" type="varchar(100)">
            </column>

            <column name="bank_address4" type="varchar(100)">
            </column>

            <column name="internal_address" type="varchar(100)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>