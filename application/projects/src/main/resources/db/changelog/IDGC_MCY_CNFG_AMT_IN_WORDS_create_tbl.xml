<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="IDGC_MCY_CNFG_AMT_IN_WORDS_create" author="rakshit">
        <comment>Amount in words configuration table creation</comment>
        <createTable tableName="IDGC_MCY_CNFG_AMT_IN_WORDS"
                     remarks="Table to store all Amount in words configurations for a currency">
            <column name="CURRENCY_CODE" type="varchar(3)" >
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="LANGUAGE_CODE" type="varchar2(2)" >
                <constraints nullable="false"/>
            </column>
            <column name="LANGUAGE_NAME" type="varchar2(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="LOCALE_CODE" type="varchar2(30)" >
                <constraints nullable="false"/>
            </column>
            <column name="LOCALE_NAME" type="varchar2(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="BEFORE_DECIMAL_VERBOSE" type="varchar2(35)" >
                <constraints nullable="false"/>
            </column>
            <column name="AFTER_DECIMAL_VERBOSE" type="varchar2(35)" >
                <constraints nullable="false"/>
            </column>
            <column name="SUFFIX_TEXT" type="varchar2(10)" >
            </column>
            <column name="PREFIX_TEXT_CURRENCY" type="varchar2(35)" >
            </column>
            <column name="FRACTION" type="varchar2(1)" >
            </column>
            <column name="TEXT_BETWEEN" type="varchar2(10)" >
            </column>
            <column name="AMOUNT_IN_FIGURE" type="integer" >
            </column>
            <column name="AMOUNT_IN_WORD" type="varchar2(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="life_cycle_id" type="varchar(50)">
            </column>
            <column name="reference_no" type="varchar(50)">
            </column>
            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>
            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(20)">
            </column>
            <column name="creation_time" type="timestamp">
            </column>
            <column name="last_updated_by" type="varchar(20)">
            </column>
            <column name="last_updated_time" type="timestamp">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>