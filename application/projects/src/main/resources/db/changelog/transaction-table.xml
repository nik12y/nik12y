<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_tran_code_cnfg" author="pranay_anil_lingayat">

        <createTable tableName="idgc_coe_tran_code_cnfg"
                     remarks="A table to contain all the transaction code configuration">

            <column name="transaction_code" type="varchar(3)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="transaction_desc" type="varchar(40)">
            </column>

            <column name="transaction_swift_code" type="varchar(3)">
                <constraints unique="true"/>
            </column>

            <column name="external_txn_code" type="varchar(6)">
                <constraints unique="true"/>
            </column>

            <column name="mis_head" type="varchar(12)">
            </column>

            <column name="is_immediate" type="char(1)">
            </column>

            <column name="is_on_value_date" type="char(1)">
            </column>

            <column name="is_after_days_value_date" type="char(1)">
            </column>

            <column name="is_after_days" type="char(1)">
            </column>

            <column name="no_of_days" type="int">
            </column>

            <column name="is_intraday_manual_rel" type="char(1)">
            </column>

            <column name="statement_date_derivation" type="varchar(35)">
            </column>

            <column name="is_aml_tracking" type="char(1)">
            </column>

            <column name="product_group" type="varchar(35)">
            </column>

            <column name="is_bal_chk_appli_batch" type="char(1)">
            </column>

            <column name="is_bal_chk_appli_online" type="char(1)">
            </column>

            <column name="is_pricing_on_tran_count" type="char(1)">
            </column>

            <column name="is_pricing_turnover_incl" type="char(1)">
            </column>

            <column name="is_pricing_balance_incl" type="char(1)">
            </column>

            <column name="is_turnover_limit" type="char(1)">
            </column>

            <column name="is_cover_account" type="char(1)">
            </column>

            <column name="is_pricing_penalty_incl" type="char(1)">
            </column>

            <column name="is_consider_ac_status_chg" type="char(1)">
                <constraints nullable="false"/>
            </column>

            <column name="is_cheque_mandatory" type="char(1)">
            </column>

            <column name="is_inter_branch_in_lcy" type="char(1)">
            </column>

            <column name="is_third_party_tran_code" type="char(1)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="is_authorized" type="varchar(1)">
                <constraints nullable="false"/>
            </column>

            <column name="last_configuration_action" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>