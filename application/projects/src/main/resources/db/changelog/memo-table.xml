<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="idgc_coe_memo" author="nilesh">

        <createTable tableName="idgc_coe_memo"
                     remarks="A table to contain all the memo configuration">

            <column name="memo_id" type="serial4" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="module_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="task_code" type="varchar(40)">
                <constraints nullable="false"/>
            </column>

            <column name="task_identifier" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="memo_comments" type="varchar(5000)">
            </column>

            <column name="record_version" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="record_status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="varchar(20)">
            </column>

            <column name="life_cycle_id" type="varchar(50)">
            </column>

            <column name="reference_no" type="varchar(50)">
            </column>

            <column name="creation_time" type="timestamp">
            </column>

            <column name="last_updated_by" type="varchar(20)">
            </column>

            <column name="last_updated_time" type="timestamp">
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>